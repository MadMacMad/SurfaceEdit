#pragma kernel CSMain

RWTexture2D<float4> Result;

float2 TextureSize;

float Brightness;

SamplerState LinearMirrorSampler;

[numthreads(32,32,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
	if (id.x > TextureSize.x || id.y > TextureSize.y)
		return;

	float4 value = Result[id.xy];
	value.rgb += Brightness;

	Result[id.xy] = value;
}
